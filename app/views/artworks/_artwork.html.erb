<div id="<%= dom_id artwork %>">
  <h2>
    <%= artwork.title %>
  </h2>

  <p>
    <em>
    <%= artwork.description %>
    </em>
  </p>
  <% begin %>
  <div class="mt-3">
    <%= image_tag artwork.image, class: "img-fluid" %>
  </div>
  <% rescue %>
  <p>No image found! Something went wrong, alas</p>
  <% end %>


</div>
