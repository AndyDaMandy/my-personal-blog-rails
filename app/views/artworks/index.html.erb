<% content_for(:title) do %>
  Artworks | Andy's Tech and Art Space
<% end %>

<div class="text-center">

<div>
		  <h1 class="mb-3">Artworks</h1>
		  <p>Click the images to see a larger version of the image. Some of these paintings are available for purchase via <a target="_blank" href="https://society6.com/andydamandy">Society Six</a></p>
			<p>I'm also on instagram <a target="_blank" href="https://www.instagram.com/andresmaldonadoart/">@andresmaldonadoart</a></p>
    </div>

<% if user_signed_in? && current_user.role == 'admin' %>
  <%= link_to "New artwork", new_artwork_path %>
<% end %>

<div id="artworks">
  <% @artworks.each do |artwork| %>
  <div class="mb-3 card p-3">
    <%= link_to artwork do %>
      <h2><%= artwork.title %></h2>
      <%= image_tag artwork.image, class: "img-thumbnail", style: "width: 30%;"%>
    <% end %>
    </div>
  <% end %>
  </div>
<div>
<%= paginate @artworks, theme: 'bootstrap-5',
                   pagination_class: "pagination-sm flex-wrap justify-content-center",
                   nav_class: "d-inline-block" %>
</div>
</div>