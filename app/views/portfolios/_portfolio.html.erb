<div id="<%= dom_id portfolio %>">
  <p>
    <strong>Name:</strong>
    <%= portfolio.name %>
  </p>

  <p>
    <strong>Poster:</strong>
    <%= link_to portfolio.poster.filename, portfolio.poster if portfolio.poster.attached? %>
  </p>

  <p>
    <strong>Language:</strong>
    <%= portfolio.language %>
  </p>

  <p>
    <strong>Framework:</strong>
    <%= portfolio.framework %>
  </p>

  <p>
    <strong>About:</strong>
    <%= portfolio.about %>
  </p>

  <p>
    <strong>User:</strong>
    <%= portfolio.user_id %>
  </p>

</div>
