<%= form_with(model: link) do |form| %>
    <% if @link.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@link.errors.count, "error") %> prohibited this link from being saved:</h2>

            <ul>
            <% @link.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
            </ul>
        </div>
    <% end %>

    <div class="field">
        <%= form.label :url_name %>
        <%= form.text_field :url_name %>
    </div>
  <p>
    This is the name of the website that will be displayed.
  </p>
    <div class="field">
        <%= form.label :url %>
        <%= form.text_field :url %>
    </div>
