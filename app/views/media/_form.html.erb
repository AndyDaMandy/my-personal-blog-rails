<%= form_with(model: medium) do |form| %>
  <% if medium.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(medium.errors.count, "error") %> prohibited this medium from being saved:</h2>

      <ul>
        <% medium.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_area :name %>
  </div>

  <div class="mb-3">
    <%= form.label :thumbnail, style: "display: block" %>
    <%= form.file_field :thumbnail %>
  </div>

  <div class="mb-3">
    <%= form.label :release_date, style: "display: block" %>
    <%= form.date_field :release_date %>
  </div>

  <div class="mb-3">
    <%= form.label :category, style: "display: block" %>
    <%= form.select(:category, Medium.categories.keys.map {|category| [category.titleize, category]}) %>
  </div>

  <div class="mb-3">
    <%= form.label :platform, style: "display: block" %>
    <%= form.select(:platform, Medium.platforms.keys.map {|platform| [platform.titleize, platform]}) %>
  </div>

  <div class="mb-3">
    <%= form.label :link, style: "display: block" %>
    <%= form.text_field :link %>
  </div>

  <div>
    <%= form.label :thoughts, style: "display: block" %>
    <%= form.rich_text_area :thoughts %>
  </div>

  <div>
    <%= form.label :date_started, style: "display: block" %>
    <%= form.date_field :date_started %>
  </div>

  <div>
    <%= form.label :date_completed, style: "display: block" %>
    <%= form.date_field :date_completed %>
  </div>

  <div>
    <%= form.label :progress, style: "display: block" %>
    <%= form.select(:progress, Medium.progresses.keys.map {|progress| [progress.titleize,progress]}) %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
